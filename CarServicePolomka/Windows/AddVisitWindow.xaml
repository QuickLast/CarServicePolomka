<Window x:Class="CarService.Windows.AddVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService.Windows"
        mc:Ignorable="d"
        Title="ООО &quot;Поломка&quot;" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Start: GridRow Top -->
        <Grid Grid.Row="0">

            <!-- Name -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Добавление посещения" FontSize="30"/>
            </StackPanel>

        </Grid>
        <!-- End: GridRow Top -->

        <!-- Start: GridRow Center -->
        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Side -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                
                <!-- Customer -->
                <StackPanel Orientation="Vertical">
                    <Label Content="Клиент"/>
                    <ComboBox x:Name="CustomerCb" DisplayMemberPath="FullName" IsEditable="True" Width="275" TextBoxBase.TextChanged="ComboBox_TextChanged"/>
                </StackPanel>

                <!-- Customer -->
                <StackPanel Orientation="Vertical" Margin="25 0 0 0">
                    <Label Content="Услуга"/>
                    <ComboBox x:Name="ServiceCb" DisplayMemberPath="Title" IsEditable="True" Width="275" TextBoxBase.TextChanged="ComboBox_TextChanged"/>
                </StackPanel>

            </StackPanel>
            
            <!-- Bottom Side -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">

                <!-- Comment -->
                <StackPanel Orientation="Vertical">
                    <Label Content="Комментарий"/>
                    <TextBox x:Name="CommentTb" HorizontalContentAlignment="Left" TextWrapping="Wrap" Width="475" Height="80"/>
                </StackPanel>

            </StackPanel>

        </Grid>
        <!-- End: GridRow Center -->

        <!-- Start: GridRow Bottom -->
        <Grid Grid.Row="2">

            <!-- Navigation -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="AddVisitBtn" Content="Добавить посещение" Width="175" Click="AddVisitBtn_Click"/>
                <Button x:Name="CancelBtn" Content="Отмена" Width="175" Margin="25 0 0 0" Click="CancelBtn_Click"/>
            </StackPanel>

        </Grid>
        <!-- End: GridRow Bottom -->

    </Grid>
</Window>
